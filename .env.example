PORT=3000

# Admin Login Credentials
ADMIN_EMAIL=admin@zootechx.com
ADMIN_PASSWORD=your_secure_password_here

# Session Secret
SESSION_SECRET=your_random_session_secret_here

# Email Configuration (Gmail SMTP)
# To get GMAIL_APP_PASSWORD:
# 1. Enable 2-Step Verification on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password

# Turso Cloud Database (FREE - Required for production deployment)
# Sign up at https://turso.tech (free tier available)
# After creating a database, get these values from the Turso dashboard
TURSO_DATABASE_URL=libsql://your-database-name-your-username.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token
